<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sonar_alerts"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layoutDirection="ltr"
    android:orientation="horizontal"
    tools:ignore="RtlHardcoded">

    <tag
        android:id="@id/uxTag"
        android:value="" />

    <ImageView
        android:id="@+id/raeb_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/sonar_alerts_horizontal_margin"
        android:src="@drawable/rimg_element_camera_warning"
        android:visibility="invisible"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/rcta_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rimg_element_camera_rcta_left"
        android:visibility="invisible"
        tools:visibility="visible" />

    <View
        android:id="@+id/spacer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/rcta_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/sonar_alerts_horizontal_margin"
        android:src="@drawable/rimg_element_camera_rcta_right"
        android:visibility="invisible"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/raeb_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rimg_element_camera_warning"
        android:visibility="invisible"
        tools:visibility="visible" />

</LinearLayout>